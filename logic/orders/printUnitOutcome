module.exports = function(units){
    units.forEach((unit) =>{
        var text = unit.powerName + ": ";

        text = text + unit.unitType;
        text = text + " in ";
        if(unit.move === "retreat"){
            text = text + unit.retreatFrom;
            text = text + " needs to retreat or disband.";
        }

        if(unit.move === "Remain"){
            text = text + unit.locationName;
            text = text + " remains.";
        }

        if(unit.move === "Move"){
            text = text + unit.locationName
            text = text + " moves to ";
            text = text + unit.moveToName;
        }
        console.log(text);
        }

    )
    return;
}